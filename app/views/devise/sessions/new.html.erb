<div class="d-flex">
  <div class="form-container">
    <div>
      <div class="form-header">
        <h1>Log in to Utopie</h1>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label_html: {class: ""},
                      input_html: { autocomplete: "email", style: "width:400px"} %>
          <%= f.input :password,
                      required: false,
                      label_html: {class: ""},
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label_html: { class: "" } if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.submit "Log in", class: "form-button" %>
        </div>
        <% end %>
        <div class="form-link py-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  <div class="form-img">
    <img src="https://images.unsplash.com/photo-1584831906842-bf112bc4c178?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80" alt="">
  </div>
</div>
