<div class="m-5 p-5">
  <h2 class="font-cinzel">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: {class: "font-cinzel"},
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label_html: {class: "font-cinzel"},
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, label_html: { class: "font-cinzel" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.submit "Log in", class: "button-s" %>
    </div>
  <% end %>
  <div class="py-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
