<h1>Post Index Page</h1>
<%= link_to new_post_path do %>
  <p>Create New Post</p>
<% end %>

<section style="background-color: #eee;">
  <div class="container py-5">
    <div class= "row">
      <div class="col-12 col-md-10">

        <% @posts.each do |post|%>
          <%# CARD %>
          <div class="card shadow p-2 p-md-4" style="background-color: #63FF72">
              <div class="card-header border-0 bg-white p-0">

                  <%= cl_image_tag post.user.photo.key, crop: :fill, class: "avatar" %>
                  <small>
                    <strong><%= post.user.nickname %></strong>
                    <i><%= post.created_at.strftime("%a %b %e at %l:%M %p") %></i>
                  </small>

                  <div class="post-meta">
                      <div class="media d-flex align-items-center justify-content-between" style="background-color: #63FF72">
                        <%# CAROUSEL %>
                        <div id="<%= post.id %>-carousel" class="carousel slide w-100">
                          <div class="carousel-inner">

                            <% post.photos.each_with_index do |photo, i| %>
                              <% if i == 0 %>
                                <div class="carousel-item active">
                                  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "d-block w-100", alt: "slide" %>
                                </div>
                              <% else %>
                                <div class="carousel-item">
                                  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "d-block w-100", alt: "slide" %>
                                </div>
                              <% end %>
                            <% end %>
                          </div>
                          <button class="carousel-control-prev" type="button" data-bs-target="#<%= post.id %>-carousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                          </button>
                          <button class="carousel-control-next" type="button" data-bs-target="#<%= post.id %>-carousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                          </button>
                        </div>

                      </div>
                  </div>
              </div>
              <div class="card-body py-4 px-0">
                  <a href="#">
                      <h3 class="h4 text-center"><%= post.title %></h3>
                  </a>
              </div>
              <div class="">
                <div class="d-flex flex-wrap flex-lg-nowrap align-items-center justify-content-between">
                    <div class="post-details mb-3 mb-lg-0">
                        <button class="btn btn-sm btn-primary animate-hover me-2">
                            <span class="fas fa-arrow-up me-2 animate-up-2"></span>
                            Like
                        </button>
                        <button class="btn btn-sm btn-danger animate-hover">
                            <span class="fas fa-arrow-down me-2 animate-down-2"></span>
                            Dislike
                        </button>
                        <%= link_to post_path(post) do %>
                          <p class="btn btn-primary">Go to post</p>
                        <% end %>
                    </div>
                    <div class="post-meta">
                        <button class="btn btn-secondary"><span class="far fa-save me-2"></span>Save</button>
                    </div>
                </div>
              </div>
          </div>
        <% end %>


      </div>
    </div>
  </div>
</section>
