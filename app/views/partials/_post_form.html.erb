<div class="d-flex">
  <div class= "form-container">
    <div>
      <div class="form-header">
        <% if @post.id == nil %>
          <h1>Create a New Post</h1>
        <% else %>
          <h1>Edit Your Post</h1>
        <% end %>
      </div>
      <%= simple_form_for(@post) do |f| %>
      <div class="form-inputs">
        <%= f.input :title , input_html: {style:"width:500px"}%>
        <%= f.input :category, as: :select, selected: "3D Modeling", collection: ["3D Modeling", "2D Visual Art", "Music Tech"]%>
        <%= f.input :content, as: :text, input_html: { rows: 10 } %>
        <%= f.input :link, as: :text %>
        <% if @post.id == nil %>
          <%= f.input :photos, as: :file, required: false, input_html: { multiple: true } %>
        <% else %>
          <%= f.input :photos, as: :file, required: false, input_html: { multiple: true, value: "#{@post.photos.first}" } %>
        <% end %>
      </div>
        <% if @post.id == nil %>
          <%= f.submit "Create Post", class: "form-button" %>
        <% else %>
          <%= f.submit "Update Post", class: "form-button" %>
        <% end %>
      <% end %>
      </div>
  </div>
  <div class="form-img">
    <img src="http://blog.kadenze.com/wp-content/uploads/2018/12/unnamed-1.gif" alt="">
  </div>
</div>
