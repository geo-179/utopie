<!DOCTYPE html>
<html>
  <head>
    <title>Utopie</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.6.0/p5.min.js"></script>
    <script src="https://kit.fontawesome.com/978069ea62.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
  </head>
  <body>

    <%# Navbar %>
    <div class="p-2 border-black d-flex justify-content-around align-items-center fixed-top background-white height-60" style="background-color:white;">

      <%# Logo / Button to home page %>
      <%= link_to root_path do %>
        <div>
          <img src="<%= root_path %>logonew.png" class="img-logo_utopie" alt="logo_utopie.png">
        </div>
      <% end %>

      <%# Dropdown Menu %>
      <li class="dropdown list-unstyled">

        <a class="nav-link dropdown-toggle nav-text text-30 fs-5 text-decoration-none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">

          Posts
        </a>
        <ul class="dropdown-menu fs-5 text-decoration-none">
          <li><%= link_to posts_path(category: "3D Modeling"), class: "dropdown-item nav-text text-20 " do %>3D Modeling<% end %></li>
          <li><%= link_to posts_path(category: "2D Visual Art"), class: "dropdown-item nav-text text-20" do %>2D Visual Art<% end %></li>
          <li><%= link_to posts_path(category: "Music Tech"), class: "dropdown-item nav-text text-20" do %>Music Tech<% end %></li>
        </ul>
      </li>

      <%# Navbar tabs%>
      <a class="nav-text text-decoration-none  fs-5" href="#">Playground</a>
      <%# <a class="nav-text text-decoration-none pt-2 fs-5" href="#">Get Inspired</a> %>
      <%= link_to "Get Inspired", get_inspired_path, class: 'nav-text text-decoration-none fs-5' %>
      <a class="nav-text text-decoration-none fs-5" href="#">Community</a>
      <%# User login%>
      <% if current_user %>
        <div class="dropdown">
          <span><%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar me-2", alt: "avatar" %></span>
          <div class="dropdown-content">
              <ul class="dropdown-list">
                <li>
                  <%= link_to "Profile Page", user_path(current_user), class: "dropdown-object" %>
                </li>
                <li>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-object" %>
                </li>
              </ul>
          </div>
        </div>
      <% else %>
        <%= button_to new_user_session_path, class: "button-p" do %>
          Log In
        <% end %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>













