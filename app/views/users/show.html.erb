    <p class="fs-5 font-arial"><%= @user.email %></p>
    <% if policy(@user).edit? %>
    <%= link_to edit_user_registration_path(@user), class: "button" do%>
    <button class="button-s">Edit Profile</button>
    <% end %>
    <% end %>
  </div>
  <%# Div for grid 5, bio %>
  <div class="grid-item-center">
    <p class="fs-3 fw-bolder font-arial">Bio</p>
    <p class="fs-4 font-arial fw-light"><%= @user.bio %></p>
  </div>
  <%# Div for grid 6 %>
  <div class="grid-item"></div>
</div>

